<div class="d-flex justify-content-between" style="color: #89a6b0;">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Create a new dose!
  </button>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
     <%= link_to "Home", cocktails_path, class: "btn btn-primary" %>
    <% end %>
  </div>
<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create a dose for <%= @cocktail.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description, label: "Add a description to your dose"  %>
          <%= f.input :ingredient, collection: @ingredients, label: "What is the ingredient?" %>
          <div class="d-flex justify-content-between">
          </div>
        <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
