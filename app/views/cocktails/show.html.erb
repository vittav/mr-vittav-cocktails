<div class="container m-6">
  <div class="d-flex justify-content-around m-4" style="min-height: 72vh;">
    <div class="photo">
      <% @cocktail.img_url != nil ? (photo = @cocktail.img_url) : (photo = cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill) %>
      <img src="<%= photo %>" alt="">
    </div>
    <div class="photo">
      <h2><%= @cocktail.name %> <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, cocktail_path(@cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" } %></h2>
      <ul>
      <% @doses.each do |dose| %>
      <li><%= dose.description %> of <%= Ingredient.find(dose.ingredient_id).name %>
        <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>  </li>
      <% end %>
      </ul>
    </div>
  </div>
  <%= render "doses/new" %>
</div>
