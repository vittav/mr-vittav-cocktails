<div class="banner d-flex" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1514933651103-005eec06c04b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2534&q=80);">
      <div class="container">
        <h1>Welcome to Vitor's Pub</strong>!</h1>
        <p>The world's best cocktails are here. Try it yourself!</p>
        <%= link_to "New Cocktail", new_cocktail_path, class: "btn btn-flat" %>
      </div>
    </div>
    <div style="background-color: #0A313B;">
      <div class="container mb-4">
          <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'search-form-control form-group m-4' } do |f| %>
            <%= f.input :name, input_html: {value: ""}, label: false %>
            <%= f.submit "Search", class: "btn btn-flat" %>
          <% end %>
          <div class="cards m-4">
            <% @cocktails.each do |cocktail| %>
              <%= link_to cocktail_path(cocktail) do %>
              <% cl_image_path cocktail.img_url != nil ? (photo = cocktail.img_url) : (photo = cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill) %>
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= photo %>)">
                  <%= cocktail.name %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= link_to "Home", cocktails_path, class: "btn btn-flat m-4" %>
        </div>
      </div>
    </div>
</div>
