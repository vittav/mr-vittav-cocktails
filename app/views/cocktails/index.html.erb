<div class="banner d-flex" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1514933651103-005eec06c04b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2534&q=80);">
      <div class="container">
        <h1>Welcome to Vitor's Pub</strong>!</h1>
        <p>The world's best cocktails are here. Try it yourself!</p>
      </div>
    </div>
    <div style="background-color: #0A313B;">
      <div class="container mb-4">
          <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'search-form-control form-group' } do |f| %>
            <%= f.input :name, input_html: {value: ""} %>
            <%= f.submit "Search", class: "btn btn-flat" %>
          <% end %>
        <div class="d-flex justify-content-between">
        <%= link_to "New Cocktail", new_cocktail_path, class: "btn btn-flat" %>
        <%= link_to "Back", cocktails_path, class: "btn btn-flat" %>
        </div>
        <div class="cards mt-4">
          <% @cocktails.each do |cocktail| %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.img_url %>)">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
